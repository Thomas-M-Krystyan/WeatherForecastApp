<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <!-- Application: General -->
    <TargetFramework>net8.0</TargetFramework>
    <AssemblyName>$(SolutionName).$(MSBuildProjectName)</AssemblyName>
    <RootNamespace>$(SolutionName).$(MSBuildProjectName)</RootNamespace>

    <!-- Build: General -->
    <Nullable>enable</Nullable>

    <!-- Build: Errors and warnings -->
    <NoWarn>
      1701;1702;
      MSB3539  <!-- NOTE: Do not notify that output directory was changed -->
    </NoWarn>

    <!-- Build: Output -->
    <UseCommonOutputDirectory>true</UseCommonOutputDirectory>
    <BaseOutputPath>$(SolutionDir)bin</BaseOutputPath>
    <BaseIntermediateOutputPath>$(SolutionDir)obj</BaseIntermediateOutputPath>

    <!-- Build: Events -->
    <RunPostBuildEvent>Always</RunPostBuildEvent>

    <!-- Code Analysis: .NET analyzers -->
    <EnforceCodeStyleInBuild>True</EnforceCodeStyleInBuild>
    <AnalysisLevel>latest-all</AnalysisLevel>
  </PropertyGroup>

  <!-- NOTE: Remove empty [bin] and [obj] folders from the project catalog -->
  <Target Name="PostBuild" AfterTargets="PostBuildEvent">
    <Exec Command="rd &quot;$(ProjectDir)bin&quot; /s /q" />
    <Exec Command="rd &quot;$(ProjectDir)obj&quot; /s /q" />
  </Target>
  <ItemGroup>
    <Compile Remove="obj\**" />
    <EmbeddedResource Remove="obj\**" />
    <None Remove="obj\**" />
  </ItemGroup>

</Project>